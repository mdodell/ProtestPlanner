


<div class="card border-0 ">
<% if get_upcoming_nearby_events_within_radius(5) && get_upcoming_nearby_events_within_radius(5).each do |event| %>
    <div class="card-header border-0 bg-white">
        <h1 class="display-4">Upcoming Nearby Events</h1>
    </div>
    <div class="card-body border-0">
    <div class="card-deck border-0">
        <div class='col-sm-6'>
            <div class="card text-black bg-light mb-4">
                <% if event.picture.attached? %>
                    <% @picture = url_for(event.picture) %>
                <% else %>
                    <% @picture = event.tags.first['photo_url'] %>
                <% end %>
                <div class="card-img-top"><%= image_tag(@picture, class: "w-100 container-image p-2") %> </div>
                <div class="card-body ">
                    <h2 class="card-title"><%= event.name %></h2>
                    <h5 class="card-text"><%= DateTime.parse(event.date_from.to_s).strftime("%A, %d %b %Y %l:%M %p")%></h5>
                    <p class="card-text "><%= event.location %></p>
                    <p class="card-text"><%= link_to 'Event Page', event_path(event), class: "btn-primary btn" %></p>
                </div>
            </div>
        </div>
    <% end %>
    </div>
<%end%>
</div>








