<%= provide(:title, 'home') %>



  <% if current_user %>
    
    <%= render 'shared/navbar_dark' %>
    
    <div class="row justify-content-center no-gutters">
    <div class="container-xl mt-5">
    <%= render 'shared/home_hero' %>

    <!-- find events user is an organizer for -->
    <div id="organized">
      <%= render 'events/eventsorganized' %>
    </div>
    <!-- find events user is an attending for -->
      <div id="attending">
        <%= render 'events/eventsattending' %>
      </div>
  

      <!-- find nearby events -->
      <div id="nearby">
        <%= render 'events/nearbyevents' %>
      </div>
  
    <div class='ml-3 mt-3'>
      Logged in as <%= current_user.user_name %>
    </div>
  </div>
  </div>

  <% else %>
    <%= link_to "Sign Up", signup_path %> or
    <%= link_to "Log In", login_path %>
  <% end %>
  <p id="notice"><%= notice %></p>
</div>


