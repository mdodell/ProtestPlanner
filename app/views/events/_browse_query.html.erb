<div class="row no-gutters border p-4">
  <% if number_of_events > 0 %>
    <div class="col-12">
      <h2><%= number_of_events %> <%= "event".pluralize(number_of_events) %> <%= number_of_events == 1 ? "was" : "were" %> found with the following parameters:</h2>
      <hr />
    </div>
  <% end %>
  <% unless query[:keyword].blank? %>
      <div class="col-lg-4 col-md-6 col-xs-12">
        <h3><b>Keyword:</b> <%= "\"#{query[:keyword]}\"" %></h3>
      </div>
  <% end %>

  <% unless query[:date].blank? %>
      <div class="col-lg-4 col-md-6 col-xs-12">
        <h3><b>Date:</b> <%= "\"#{query[:date]}\"" %></h3>
      </div>
  <% end %>

  <% unless query[:location].blank? %>
      <div class="col-lg-4 col-md-6 col-xs-12">
        <h3><b>Location:</b> <%= "\"#{query[:location]}\"" %></h3>
      </div>
  <% end %>

  <% unless query[:tags].blank? %>
      <div class="col-lg-4 col-md-6 col-xs-12">
        <h3><b>Tag:</b> <%= "\"#{Tag.find(query[:tags]).name}\"" %></h3>
      </div>
  <% end %>
</div>
<hr />


