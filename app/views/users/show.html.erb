


<% provide(:title, @user.user_name) %>
<%= render 'shared/navbar_dark' %>

<div class="row justify-content-center no-gutters">
 
  <div class="container-xl mt-5">

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="card card-inverse bg-light" >
        <div class="card-block ">
          <div class="row m-3">
            <div class="col-md-8 col-sm-8">
            <h1 class="display-4">Profile Page <%= link_to 'Edit my profile', edit_user_path(@user), class: "btn-primary btn" %></h1>
                <h2 class="card-title font-weight-light"><b>Username: </b><%=current_user.user_name %></h2>
                <h2 class="card-text font-weight-light"><b>Events attending: </b><%=UserEventRelationship.where(role_type_id: '1', user_id: current_user.id ).length %></h2>
                <h2 class="card-text font-weight-light"><b>Events organized: </b><%=UserEventRelationship.where(role_type_id: '0', user_id: current_user.id ).length %></h2>
                <h2 class="card-text font-weight-light"><b>Email: </b><%=current_user.profile %></h2>
                <h2 class="card-text font-weight-light"><b>Phone: </b><%=current_user.phone %></h2>
            </div>

            <div class="col-md-4 col-sm-4 mt-4 mb-4 pl-1 pr-2 text-center ">
            <div class="card-img">
              <% if @user.avatar.attached? %>
                <% @avatar = url_for(@user.avatar) %>
                  <%= image_tag(@avatar, class: "w-100 pl-2 pr-2 container-image p-2") %>
              
              <%else %>
                <%= gravatar_for @user %>
              <% end %>
            </div>

          </div>         

    </div>

</div>




</div>
</div>
</div>
</div> 
</div>
</div>




<div class="container-xl mt-5">
  <% if current_user.events.length > 0 %>
    <!-- find events user is an attending for -->
    <%= render 'events/pastattended' %>
    <!-- find events user is an organizer for -->
    <%= render 'events/pastorganized' %>
  <% end %>

</div>
</div>

